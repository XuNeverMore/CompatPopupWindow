<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AnimStyle" parent="Animation.AppCompat.DropDownUp">
        <item name="android:windowEnterAnimation">@anim/anim_zoom_out_right_top</item>
        <item name="android:windowExitAnimation">@anim/anim_zoom_in_left_bottom</item>
    </style>

    <style name="AnimStyle.Bottom" parent="Animation.AppCompat.DropDownUp">
        <item name="android:windowEnterAnimation">@anim/anim_zoom_out_bottom_right</item>
        <item name="android:windowExitAnimation">@anim/anim_zoom_in_right_bottom</item>
    </style>

    <style name="MoreTextStyle">
        <item name="android:clickable">true</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:textSize">@dimen/dp16</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">#333333</item>
        <item name="android:paddingTop">@dimen/padding_common</item>
        <item name="android:paddingBottom">@dimen/padding_common</item>
        <item name="android:drawablePadding">14dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
